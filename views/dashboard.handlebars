   <div class="row text-center">
        <div class="col-12">
            <h2 class="title p-4">Your posts</h2><hr>
        </div>
        <div class="col-12">
            <a href="/dashboard/create/"><button type="button" class="btn btn-primary">Create Post</button></a> 
        </div>
{{#if posts.length}}
    </div>
</div>
{{#each posts as |post|}}
<div class="card">
    <div class="card">
        <header class="card-header p-3 mb-2 bg-secondary text-white">
            <div class="column">
                <p class="text-white"></p>
                <p class="text-white fs-5">{{post.title}} </p>
            </div>
        </header>

    <div class="card-content">
        <div class="content p-3">
            {{post.content}}
        </div>
            <div class="d-flex justify-content-end p-2 text-right">
                <b> {{post.user.username}} </b>| {{format_date post.created_at}} |  <a href="/post/{{id}}"> {{post.comments.length}} {{format_plural " Comment" comments.length}} </a>
            </div>
        </div>
    </div>
            <div class="d-flex justify-content-start m-3">
                <a href="/dashboard/edit/{{post.id}}"><button class="btn btn-primary">Edit post</button></a>
            </div>
        </div>
{{/each}}

{{else}}
<h6 class="fs-4 fst-italic p-4 text-center">You do not have any posts.</h6>

{{/if}}