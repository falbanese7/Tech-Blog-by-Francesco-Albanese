<div class="card">
  <header class="card-header p-3 mb-2 bg-secondary text-white">
    <div class="column">
        <p class="text-white"></p>
        {{!-- <p class="text-white fs-5">{{post.title}} </p> --}}
        <a href="/post/{{post.id}}"  class="text-white fs-5">{{post.title}} </a></p>
    </div>
  </header>

<div class="card-content">
    <div class="content p-3">
        {{post.content}}
    </div>
        <div class="d-flex justify-content-end p-2 text-right">
            <b> {{post.user.username}} </b>| {{format_date post.created_at}} |  <a href="/post/{{post.id}}"> {{post.comments.length}} {{format_plural " Comment" comments.length}} </a>
        </div>
    </div>
</div>

{{#if logged_in}}
<form class="comment-form">
  <div class="form-floating">
    <textarea class="form-control" name="comment-body" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
    <label for="floatingTextarea2">Leave a comment</label>
  </div>
  <div class="d-flex justify-content-center p-2">
    <button class="btn btn-primary comment-btn" type="submit">Add a Comment</button>
  </div>
  
</form>
{{/if}}


{{> comment post.comments}}

{{#if logged_in}}
<script src="/js/comment.js"></script>
{{/if}}